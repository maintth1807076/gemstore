@model GemStore.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



<div class="login-page page fix">
    <!--start login Area-->
    <div class="container">
        <div class="">

            <div class="col-md-2"></div>
            <div class="col-sm-6 col-md-5" style="margin-left:15%;">
                <div class="login">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <h2>Create A new Account</h2>
                        <p>Create your own account</p>
                        <div class="row">
                            <div class="form-group col-md-12 " style="margin-bottom:0;">
                                <label>User name<span>*</span></label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6" style="margin-right:3px;margin-bottom:0;">
                                <label>Fisrt name<span>*</span></label>
                                @Html.EditorFor(model => model.UserFName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserFName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6" style="margin-left:3px; margin-bottom:0;">
                                <label>Last name<span>*</span></label>
                                @Html.EditorFor(model => model.UserLName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserLName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6" style="margin-right:3px;margin-bottom:0;">
                                <label>Password<span>*</span></label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-md-6" style="margin-left:3px;margin-bottom:0;">
                                <label>Confirm Password<span>*</span></label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                      
                        <div class="row">
                            <div class="form-group col-md-12 " style="margin-bottom:0;">
                                <label>Address<span>*</span></label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6" style="margin-right:3px;margin-bottom:0;">
                                <label>Email<span>*</span></label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6" style="margin-left:3px;margin-bottom:0;">
                                <label>Phone number<span>*</span></label>
                                @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <input type="submit" class="btn btn-warning" value="Register" style=" float:right;" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


